<%= form_for @servlet, html: { role:'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.select :image, @image.tags.push(@image.id), {}, class: 'form-control' %>
  </div>
  <div class="panel panel-default panel-primary" id="expose_ports">
    <div class="panel-heading">Exposed Ports</div>
    <div class="panel-body">
      <% @image.exposed_ports.each do |p| %>
        <div class="row">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="servlet[expose-<%= p.gsub('/','-') %>]" data-enable="hostport"> Expose
            </label>
          </div>
          <label for="servlet[portfor-<%= p.gsub('/','-') %>]" class="col-sm-offset-1"><%= p %></label>
          <input type="number" name="servlet[portfor-<%= p.gsub('/','-') %>]" class="form-control" disabled="true" id="hostport">
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel panel-default panel-primary" id="map_volumes">
    <div class="panel-heading">Map Volumes</div>
    <div class="panel-body">
      <% @image.volumes.each do |v| %>
        <div class="row">
          <label class="col-sm-offset-1"><%= v %></label>
          <input type="text" name="servlet[volumefor-<%= v.gsub('/','-') %>]" class="form-control" id="volume">
        </div>
      <% end %>
    </div>
  </div>
  <%= f.submit %>
<% end %>