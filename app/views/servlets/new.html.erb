<%= form_for @servlet, html: { role:'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.select :image, @image.tags.push(@image.id), {}, class: 'form-control' %>
  </div>

<% end %>